<Window x:Class="OnewheroBayVisitorManagement.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="700" Width="1000" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Admin Dashboard" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

        <TabControl Grid.Row="1">
            <!-- BOOKINGS TAB -->
            <TabItem Header="Bookings">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Name="txtSearchBooking" Width="200" TextChanged="txtSearchBooking_TextChanged"/>
                    </StackPanel>

                    <!-- DataGrid -->
                    <DataGrid Name="dgBookings" Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Single" SelectionChanged="dgBookings_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Visitor" Binding="{Binding VisitorName}" Width="*"/>
                            <DataGridTextColumn Header="Event" Binding="{Binding EventName}" Width="*"/>
                            <DataGridTextColumn Header="Tickets" Binding="{Binding NumberOfTickets}" Width="Auto"/>
                            <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount}" Width="Auto"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding BookingStatus}" Width="Auto"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding BookingDate, StringFormat=dd/MM/yyyy}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Form + Delete -->
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" >
                        <StackPanel>
                            <TextBlock Text="Visitor Name"/>
                            <TextBox Name="txtVisitorName" Width="150" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Event Name"/>
                            <TextBox Name="txtEventName" Width="150" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Tickets"/>
                            <TextBox Name="txtNumberOfTickets" Width="60" IsReadOnly="True"/>
                        </StackPanel>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Total"/>
                            <TextBox Name="txtTotalAmount" Width="80" IsReadOnly="True"/>
                        </StackPanel>

                        <Button Name="btnDeleteBooking" Content="Delete Booking" Margin="20,0,0,0" Width="120" Click="btnDeleteBooking_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- EVENTS TAB -->
            <TabItem Header="Events">
                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Name="txtSearchEvent" Width="200" TextChanged="txtSearchEvent_TextChanged"/>
                    </StackPanel>

                    <!-- DataGrid -->
                    <DataGrid Name="dgEvents" Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Single" SelectionChanged="dgEvents_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Event Name" Binding="{Binding EventName}" Width="*"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding EventDate, StringFormat=dd/MM/yyyy}" Width="Auto"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*"/>
                            <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="Auto"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding TicketPrice}" Width="Auto"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Form + Delete -->
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="Event Name"/>
                            <TextBox Name="txtEventNameEvent" Width="150"/>
                        </StackPanel>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Location"/>
                            <TextBox Name="txtLocationEvent" Width="150"/>
                        </StackPanel>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Date"/>
                            <DatePicker Name="dpEventDate"/>
                        </StackPanel>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Capacity"/>
                            <TextBox Name="txtCapacityEvent" Width="60"/>
                        </StackPanel>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Ticket Price"/>
                            <TextBox Name="txtTicketPriceEvent" Width="80"/>
                        </StackPanel>

                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Active"/>
                            <CheckBox Name="chkIsActive" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Button Name="btnDeleteEvent" Content="Delete Event" Margin="20,0,0,0" Width="120" Click="btnDeleteEvent_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
