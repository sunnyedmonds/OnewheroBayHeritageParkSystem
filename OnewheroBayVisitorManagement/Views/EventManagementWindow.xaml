<Window x:Class="OnewheroBayVisitorManagement.Views.EventManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Event Management" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Form -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                Margin="0,0,10,0"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Event Management" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="#1B5E20"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="Event Name *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtEventName" Style="{StaticResource TextBoxStyle}"/>

                    <TextBlock Text="Description *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtDescription" 
                            Style="{StaticResource TextBoxStyle}"
                            Height="80"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"/>

                    <TextBlock Text="Event Date *" FontWeight="SemiBold"/>
                    <DatePicker x:Name="dpEventDate" 
                               Margin="0,5,0,10"
                               FontSize="14"/>

                    <TextBlock Text="Event Time *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtEventTime" 
                            Style="{StaticResource TextBoxStyle}"
                            Text="10:00 AM"/>

                    <TextBlock Text="Location *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtLocation" Style="{StaticResource TextBoxStyle}"/>

                    <TextBlock Text="Category *" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbCategory" 
                             Margin="0,5,0,10"
                             FontSize="14"
                             Padding="8">
                        <ComboBoxItem Content="Exhibition"/>
                        <ComboBoxItem Content="Animal Encounter"/>
                        <ComboBoxItem Content="Guided Tour"/>
                        <ComboBoxItem Content="Workshop"/>
                        <ComboBoxItem Content="Cultural Event"/>
                        <ComboBoxItem Content="Special Event"/>
                    </ComboBox>

                    <TextBlock Text="Capacity *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtCapacity" 
                            Style="{StaticResource TextBoxStyle}"
                            Text="50"/>

                    <TextBlock Text="Ticket Price ($) *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtTicketPrice" 
                            Style="{StaticResource TextBoxStyle}"
                            Text="25.00"/>

                    <TextBlock Text="Image URL" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtImageUrl" Style="{StaticResource TextBoxStyle}"/>

                    <CheckBox x:Name="chkIsActive" 
                             Content="Active Event" 
                             IsChecked="True"
                             Margin="0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Add Event" 
                                Style="{StaticResource ButtonStyle}"
                                Click="AddEvent_Click"
                                Width="120"/>
                        <Button Content="Update" 
                                Style="{StaticResource ButtonStyle}"
                                Click="UpdateEvent_Click"
                                Width="120"/>
                        <Button Content="Clear" 
                                Style="{StaticResource DeleteButtonStyle}"
                                Click="ClearForm_Click"
                                Width="120"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Panel - Data Grid -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                Margin="10,0,0,0"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                          Text="Events List" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#1B5E20"
                          Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBox x:Name="txtSearch" 
                            Width="300" 
                            Style="{StaticResource TextBoxStyle}"
                            Margin="0,0,10,0"/>
                    <Button Content="Search" 
                            Style="{StaticResource ButtonStyle}"
                            Click="SearchEvent_Click"
                            Width="100"/>
                    <Button Content="Refresh" 
                            Style="{StaticResource ButtonStyle}"
                            Click="RefreshData_Click"
                            Width="100"/>
                </StackPanel>

                <DataGrid Grid.Row="2"
                         x:Name="dgEvents"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         GridLinesVisibility="Horizontal"
                         AlternatingRowBackground="#F5F5F5"
                         SelectionChanged="dgEvents_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Event Name" Binding="{Binding EventName}" Width="200"/>
                        <DataGridTextColumn Header="Date" 
                                          Binding="{Binding EventDate, StringFormat='dd/MM/yyyy'}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="Time" Binding="{Binding EventTime}" Width="80"/>
                        <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="120"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100"/>
                        <DataGridTextColumn Header="Capacity" Binding="{Binding Capacity}" Width="80"/>
                        <DataGridTextColumn Header="Available" Binding="{Binding AvailableSeats}" Width="80"/>
                        <DataGridTextColumn Header="Price" 
                                          Binding="{Binding TicketPrice, StringFormat='${0:F2}'}" 
                                          Width="80"/>
                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="60"/>
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Delete" 
                                           Style="{StaticResource DeleteButtonStyle}"
                                           Click="DeleteEvent_Click"
                                           Tag="{Binding Id}"
                                           Width="80"
                                           Margin="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>