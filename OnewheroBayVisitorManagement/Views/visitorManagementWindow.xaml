<Window x:Class="OnewheroBayVisitorManagement.Views.VisitorManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Visitor Management" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Form -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                Margin="0,0,10,0"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Visitor Registration" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="#1B5E20"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="First Name *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtFirstName" Style="{StaticResource TextBoxStyle}"/>

                    <TextBlock Text="Last Name *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtLastName" Style="{StaticResource TextBoxStyle}"/>

                    <TextBlock Text="Email *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtEmail" Style="{StaticResource TextBoxStyle}"/>

                    <TextBlock Text="Phone *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPhone" Style="{StaticResource TextBoxStyle}"/>

                    <TextBlock Text="Address" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtAddress" Style="{StaticResource TextBoxStyle}"/>

                    <TextBlock Text="City" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtCity" Style="{StaticResource TextBoxStyle}"/>

                    <TextBlock Text="Country" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtCountry" Style="{StaticResource TextBoxStyle}"/>

                    <TextBlock Text="Interests" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <StackPanel x:Name="InterestsPanel">
                        <CheckBox Content="Museum" Margin="0,5"/>
                        <CheckBox Content="Kiwi House" Margin="0,5"/>
                        <CheckBox Content="Native Birds" Margin="0,5"/>
                        <CheckBox Content="Reptile Exhibits" Margin="0,5"/>
                        <CheckBox Content="Marae Tours" Margin="0,5"/>
                        <CheckBox Content="Nature Walks" Margin="0,5"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Add Visitor" 
                                Style="{StaticResource ButtonStyle}"
                                Click="AddVisitor_Click"
                                Width="120"/>
                        <Button Content="Update" 
                                Style="{StaticResource ButtonStyle}"
                                Click="UpdateVisitor_Click"
                                Width="120"/>
                        <Button Content="Clear" 
                                Style="{StaticResource DeleteButtonStyle}"
                                Click="ClearForm_Click"
                                Width="120"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Panel - Data Grid -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                Margin="10,0,0,0"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                          Text="Registered Visitors" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#1B5E20"
                          Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBox x:Name="txtSearch" 
                            Width="300" 
                            Style="{StaticResource TextBoxStyle}"
                            Margin="0,0,10,0"/>
                    <Button Content="Search" 
                            Style="{StaticResource ButtonStyle}"
                            Click="SearchVisitor_Click"
                            Width="100"/>
                    <Button Content="Refresh" 
                            Style="{StaticResource ButtonStyle}"
                            Click="RefreshData_Click"
                            Width="100"/>
                </StackPanel>

                <DataGrid Grid.Row="2"
                         x:Name="dgVisitors"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         GridLinesVisibility="Horizontal"
                         AlternatingRowBackground="#F5F5F5"
                         SelectionChanged="dgVisitors_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="150"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                        <DataGridTextColumn Header="City" Binding="{Binding City}" Width="100"/>
                        <DataGridTextColumn Header="Registration Date" 
                                          Binding="{Binding RegistrationDate, StringFormat='dd/MM/yyyy'}" 
                                          Width="120"/>
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Delete" 
                                           Style="{StaticResource DeleteButtonStyle}"
                                           Click="DeleteVisitor_Click"
                                           Tag="{Binding Id}"
                                           Width="80"
                                           Margin="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>