<Window x:Class="OnewheroBayVisitorManagement.Views.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="White">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Admin Login" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Username -->
            <TextBox x:Name="UsernameTextBox" Height="30" Margin="0,0,0,10"/>

            <!-- Password -->
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,20"/>

            <!-- Login Button -->
            <Button Content="Login" Height="35" Background="#4CAF50" Foreground="White" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
