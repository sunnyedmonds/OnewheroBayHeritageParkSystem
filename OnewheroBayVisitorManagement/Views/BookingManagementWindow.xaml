<Window x:Class="OnewheroBayVisitorManagement.Views.BookingManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking Management" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Form -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                Margin="0,0,10,0"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Create Booking" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="#1B5E20"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="Select Visitor *" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbVisitors" 
                             DisplayMemberPath="FullName"
                             SelectedValuePath="Id"
                             Margin="0,5,0,10"
                             FontSize="14"
                             Padding="8"
                             SelectionChanged="cmbVisitors_SelectionChanged"/>

                    <TextBlock Text="Select Event *" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbEvents" 
                             DisplayMemberPath="EventName"
                             SelectedValuePath="Id"
                             Margin="0,5,0,10"
                             FontSize="14"
                             Padding="8"
                             SelectionChanged="cmbEvents_SelectionChanged"/>

                    <!-- Event Details Display -->
                    <Border Background="#E8F5E9" 
                           CornerRadius="5" 
                           Padding="15"
                           Margin="0,10"
                           x:Name="eventDetailsPanel"
                           Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock Text="Event Details" 
                                      FontWeight="Bold" 
                                      FontSize="16"
                                      Margin="0,0,0,10"/>
                            <TextBlock x:Name="txtEventDetails" 
                                      TextWrapping="Wrap"
                                      FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="Number of Tickets *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtNumberOfTickets" 
                            Style="{StaticResource TextBoxStyle}"
                            Text="1"
                            TextChanged="txtNumberOfTickets_TextChanged"/>

                    <TextBlock Text="Ticket Price" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtTicketPrice" 
                            Style="{StaticResource TextBoxStyle}"
                            IsReadOnly="True"
                            Background="#F5F5F5"/>

                    <TextBlock Text="Total Amount" FontWeight="SemiBold" FontSize="16"/>
                    <TextBlock x:Name="txtTotalAmount" 
                              FontSize="24"
                              FontWeight="Bold"
                              Foreground="#2E7D32"
                              Margin="0,5,0,15"
                              Text="$0.00"/>

                    <TextBlock Text="Booking Status" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbBookingStatus" 
                             Margin="0,5,0,10"
                             FontSize="14"
                             Padding="8"
                             SelectedIndex="0">
                        <ComboBoxItem Content="Confirmed"/>
                        <ComboBoxItem Content="Pending"/>
                        <ComboBoxItem Content="Cancelled"/>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Create Booking" 
                                Style="{StaticResource ButtonStyle}"
                                Click="CreateBooking_Click"
                                Width="140"/>
                        <Button Content="Update" 
                                Style="{StaticResource ButtonStyle}"
                                Click="UpdateBooking_Click"
                                Width="120"/>
                        <Button Content="Clear" 
                                Style="{StaticResource DeleteButtonStyle}"
                                Click="ClearForm_Click"
                                Width="120"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Panel - Data Grid -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                Margin="10,0,0,0"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                          Text="All Bookings" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#1B5E20"
                          Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBox x:Name="txtSearch" 
                            Width="300" 
                            Style="{StaticResource TextBoxStyle}"
                            Margin="0,0,10,0"/>
                    <Button Content="Search" 
                            Style="{StaticResource ButtonStyle}"
                            Click="SearchBooking_Click"
                            Width="100"/>
                    <Button Content="Refresh" 
                            Style="{StaticResource ButtonStyle}"
                            Click="RefreshData_Click"
                            Width="100"/>
                </StackPanel>

                <DataGrid Grid.Row="2"
                         x:Name="dgBookings"
                         AutoGenerateColumns="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         GridLinesVisibility="Horizontal"
                         AlternatingRowBackground="#F5F5F5"
                         SelectionChanged="dgBookings_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Visitor" Binding="{Binding VisitorName}" Width="150"/>
                        <DataGridTextColumn Header="Event" Binding="{Binding EventName}" Width="180"/>
                        <DataGridTextColumn Header="Booking Date" 
                                          Binding="{Binding BookingDate, StringFormat='dd/MM/yyyy'}" 
                                          Width="110"/>
                        <DataGridTextColumn Header="Tickets" Binding="{Binding NumberOfTickets}" Width="70"/>
                        <DataGridTextColumn Header="Total" 
                                          Binding="{Binding TotalAmount, StringFormat='${0:F2}'}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding BookingStatus}" Width="100"/>
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Delete" 
                                           Style="{StaticResource DeleteButtonStyle}"
                                           Click="DeleteBooking_Click"
                                           Tag="{Binding Id}"
                                           Width="80"
                                           Margin="0"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>