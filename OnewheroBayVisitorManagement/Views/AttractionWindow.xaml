<Window x:Class="OnewheroBayVisitorManagement.Views.AttractionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Park Attractions" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#D32F2F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Form -->
        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                Margin="0,0,10,0"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Attraction Management" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="#1B5E20"
                              Margin="0,0,0,20"/>

                    <TextBlock Text="Attraction Name *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtAttractionName" Style="{StaticResource TextBoxStyle}"/>

                    <TextBlock Text="Description *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtDescription" 
                            Style="{StaticResource TextBoxStyle}"
                            Height="100"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"/>

                    <TextBlock Text="Category *" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbCategory" 
                             Margin="0,5,0,10"
                             FontSize="14"
                             Padding="8">
                        <ComboBoxItem Content="Museum"/>
                        <ComboBoxItem Content="Wildlife"/>
                        <ComboBoxItem Content="Native Birds"/>
                        <ComboBoxItem Content="Reptiles"/>
                        <ComboBoxItem Content="Cultural"/>
                        <ComboBoxItem Content="Nature Walk"/>
                        <ComboBoxItem Content="Interactive"/>
                    </ComboBox>

                    <TextBlock Text="Opening Hours *" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtOpeningHours" 
                            Style="{StaticResource TextBoxStyle}"
                            Text="9:00 AM - 5:00 PM"/>

                    <TextBlock Text="Image URL" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtImageUrl" Style="{StaticResource TextBoxStyle}"/>

                    <CheckBox x:Name="chkIsActive" 
                             Content="Active Attraction" 
                             IsChecked="True"
                             Margin="0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Add Attraction" 
                                Style="{StaticResource ButtonStyle}"
                                Click="AddAttraction_Click"
                                Width="130"/>
                        <Button Content="Update" 
                                Style="{StaticResource ButtonStyle}"
                                Click="UpdateAttraction_Click"
                                Width="120"/>
                        <Button Content="Clear" 
                                Style="{StaticResource DeleteButtonStyle}"
                                Click="ClearForm_Click"
                                Width="120"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Panel - Display -->
        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="10" 
                Padding="20"
                Margin="10,0,0,0"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                          Text="Park Attractions" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#1B5E20"
                          Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBox x:Name="txtSearch" 
                            Width="300" 
                            Style="{StaticResource TextBoxStyle}"
                            Margin="0,0,10,0"/>
                    <Button Content="Search" 
                            Style="{StaticResource ButtonStyle}"
                            Click="SearchAttraction_Click"
                            Width="100"/>
                    <Button Content="Refresh" 
                            Style="{StaticResource ButtonStyle}"
                            Click="RefreshData_Click"
                            Width="100"/>
                </StackPanel>

                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="attractionsPanel">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F5F5F5" 
                                       CornerRadius="8" 
                                       Padding="15" 
                                       Margin="0,0,0,15"
                                       BorderBrush="#E0E0E0"
                                       BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" 
                                                      FontSize="18" 
                                                      FontWeight="Bold"
                                                      Foreground="#1B5E20"
                                                      Margin="0,0,0,5"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                                <Border Background="#2E7D32" 
                                                       CornerRadius="3" 
                                                       Padding="8,3">
                                                    <TextBlock Text="{Binding Category}" 
                                                              Foreground="White" 
                                                              FontSize="11"
                                                              FontWeight="SemiBold"/>
                                                </Border>
                                                <Border Background="#FFC107" 
                                                       CornerRadius="3" 
                                                       Padding="8,3"
                                                       Margin="5,0,0,0">
                                                    <TextBlock Text="{Binding OpeningHours}" 
                                                              Foreground="White" 
                                                              FontSize="11"
                                                              FontWeight="SemiBold"/>
                                                </Border>
                                            </StackPanel>

                                            <TextBlock Text="{Binding Description}" 
                                                      TextWrapping="Wrap" 
                                                      FontSize="13"
                                                      Foreground="#555"
                                                      Margin="0,0,0,10"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Status: " 
                                                          FontWeight="SemiBold" 
                                                          FontSize="12"/>
                                                <TextBlock FontSize="12">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Active"/>
                                                            <Setter Property="Foreground" Value="Green"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                                    <Setter Property="Text" Value="Inactive"/>
                                                                    <Setter Property="Foreground" Value="Red"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <Button Content="Edit" 
                                                   Style="{StaticResource ButtonStyle}"
                                                   Click="EditAttraction_Click"
                                                   Tag="{Binding Id}"
                                                   Width="80"
                                                   Margin="0,0,0,5"/>
                                            <Button Content="Delete" 
                                                   Style="{StaticResource DeleteButtonStyle}"
                                                   Click="DeleteAttraction_Click"
                                                   Tag="{Binding Id}"
                                                   Width="80"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>