<Window x:Class="OnewheroBayVisitorManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Onewhero Bay Heritage Park - Visitor Management" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1B5E20"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1B5E20" Padding="20">
            <StackPanel>
                <TextBlock Text="🌿 Onewhero Bay Heritage Park" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Visitor Management System" 
                           FontSize="18" 
                           Foreground="#B2DFDB"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Welcome Message -->
            <Border Grid.Row="0" Background="#E8F5E9" 
                    CornerRadius="10" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Welcome to the Visitor Management Dashboard" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#1B5E20"/>
                    <TextBlock Text="Manage visitors, events, bookings, and attractions all in one place" 
                               FontSize="14" 
                               Foreground="#555"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Visitor Management -->
                <Border Grid.Row="0" Grid.Column="0" Background="White" CornerRadius="10" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel VerticalAlignment="Center" Margin="30">
                        <TextBlock Text="👥" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Visitor Registration" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                        <TextBlock Text="Register new visitors and manage visitor information" FontSize="12" Foreground="#666" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,15"/>
                        <Button Content="Manage Visitors" Style="{StaticResource MenuButtonStyle}" Click="ManageVisitors_Click"/>
                    </StackPanel>
                </Border>

                <!-- Event Management -->
                <Border Grid.Row="0" Grid.Column="1" Background="White" CornerRadius="10" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel VerticalAlignment="Center" Margin="30">
                        <TextBlock Text="🎪" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Event Management" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                        <TextBlock Text="Create and manage special events and exhibitions" FontSize="12" Foreground="#666" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,15"/>
                        <Button Content="Manage Events" Style="{StaticResource MenuButtonStyle}" Click="ManageEvents_Click"/>
                    </StackPanel>
                </Border>

                <!-- Booking Management -->
                <Border Grid.Row="1" Grid.Column="0" Background="White" CornerRadius="10" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel VerticalAlignment="Center" Margin="30">
                        <TextBlock Text="🎫" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Booking System" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                        <TextBlock Text="Manage event bookings and ticket reservations" FontSize="12" Foreground="#666" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,15"/>
                        <Button Content="Manage Bookings" Style="{StaticResource MenuButtonStyle}" Click="ManageBookings_Click"/>
                    </StackPanel>
                </Border>

                <!-- Attractions -->
                <Border Grid.Row="1" Grid.Column="1" Background="White" CornerRadius="10" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel VerticalAlignment="Center" Margin="30">
                        <TextBlock Text="🦜" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Attractions" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                        <TextBlock Text="View and manage park attractions and exhibits" FontSize="12" Foreground="#666" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,15"/>
                        <Button Content="View Attractions" Style="{StaticResource MenuButtonStyle}" Click="ViewAttractions_Click"/>
                    </StackPanel>
                </Border>

                <!-- Analytics Dashboard -->
                <Border Grid.Row="2" Grid.Column="0" Background="White" CornerRadius="10" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel VerticalAlignment="Center" Margin="30">
                        <TextBlock Text="📊" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Analytics &amp; Reports" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                        <TextBlock Text="View visitor statistics, demographics, and event performance" FontSize="12" Foreground="#666" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,15"/>
                        <Button Content="View Analytics" Style="{StaticResource MenuButtonStyle}" Click="ViewAnalytics_Click"/>
                    </StackPanel>
                </Border>

                <!-- Settings -->
                <Border Grid.Row="2" Grid.Column="1" Background="White" CornerRadius="10" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
                    <StackPanel VerticalAlignment="Center" Margin="30">
                        <TextBlock Text="⚙️" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Admin Dashboard" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                        <TextBlock Text="View Dashboard" FontSize="12" Foreground="#666" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,15"/>
                        <Button Content="System Settings" Style="{StaticResource MenuButtonStyle}" Click="AdminDashboard_Click"/>
                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</Window>
