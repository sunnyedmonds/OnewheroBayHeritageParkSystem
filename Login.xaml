<Window x:Class="OnewheroBayVMS.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnewheroBayVMS"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Username:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Height="30" Margin="0,0,0,15"/>
            <TextBlock Text="Password:" FontSize="16" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,20"/>
            <Button x:Name="LoginButton" Content="Login" Height="40" Click="OnClickLogin"/>
        </StackPanel>
</StackPanel>
</Window>
