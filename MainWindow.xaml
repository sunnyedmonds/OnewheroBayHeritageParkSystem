<Window x:Class="OnewheroBayVMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnewheroBayVMS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome to Onewhero Bay Heritage Park" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" Margin="0,58,0,0" >
            <Button x:Name="EventsButton" Content="Events" Height="40" Margin="0,0,0,10" Click="OnClickGoEvents"/>
            <Button x:Name="ParkButton" Content="Park Information" Height="40" Margin="0,0,0,10" Click="OnClickGoParkInfo"/>
            <Button x:Name="AccountButton" Content="Account" Height="40" Margin="0,0,0,10" Click="OnClickGoAccount"/>
            <Button x:Name="ContactUsButton" Content="Contact Us" Height="40" Click="OnClickGoContact"/>
        </StackPanel>
        
        




    </Grid>
</Window>
